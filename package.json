{
  "name": "lanwatcher",
  "productName": "LAN Watcher",
  "version": "0.2.5",
  "description": "Watching the devices in local area network",
  "author": "Glory Wong",
  "main": "dist-electron/main.js",
  "private": true,
  "build": {
    "appId": "com.glorywong.${name}",
    "copyright": "Copyright Â© 2023 ${author}",
    "asar": true,
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      ".output/**/*",
      "dist-electron"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "assets/lanwatcher.icns"
    },
    "publish": {
      "provider": "github",
      "owner": "GloryWong",
      "repo": "lanwatcher",
      "releaseType": "release"
    }
  },
  "scripts": {
    "dev": "nuxt dev -o",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && electron-builder install-app-deps",
    "pack": "nuxt generate && electron-builder --dir",
    "build": "nuxt generate && electron-builder",
    "publish": "nuxt generate && electron-builder --publish=onTagOrDraft",
    "lint:js": "eslint --ext \".ts,.vue\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint": "yarn lint:js && yarn lint:prettier",
    "lintfix": "prettier --write --list-different . && yarn lint:js --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@types/ping": "^0.4.1",
    "@typescript-eslint/parser": "^5.54.1",
    "editorconfig": "^1.0.2",
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nuxt": "^3.2.3",
    "nuxt-electron": "^0.4.2",
    "prettier": "^2.8.4",
    "sass": "^1.59.2",
    "type-fest": "^3.6.1",
    "vite-electron-plugin": "^0.8.2"
  },
  "lint-staged": {
    "*.[js|ts]": "eslint --cache --fix"
  },
  "dependencies": {
    "@mdi/font": "^7.1.96",
    "@vueuse/core": "^9.13.0",
    "@vueuse/nuxt": "^9.13.0",
    "ping": "^0.4.4",
    "vuetify": "^3.1.8"
  }
}
